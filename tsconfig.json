{
    "compilerOptions": {
        "lib": [
            "esnext",
            "dom"
        ],
        "listEmittedFiles": false,
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "outDir": "./dist/esm",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "pretty": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist/types",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false
    },
    "compileOnSave": false,
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "ts-node": {
        "loader": "esm",
        "transpileOnly": true,
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}